<%= form_tag(user_tickets_path(@user)) do %>
  <%= render 'common/errors', resource: @ticket %>

  <div class="field">
    <%= label_tag 'ticket[user_name]', 'ФИО пассажира' %><br>
    <%= text_field_tag 'ticket[user_name]' %>
  </div>

  <div class="field">
    <b>Поезд: </b> <%= @train.number %>
  </div>


  <div class="field">
    <b>Станция отправления:</b> <%= @start_station.title %>
  </div>

  <div class="field">
    <b>Станция прибытия:</b> <%= @end_station.title %>
  </div>

  <div class="field">
    <%=	hidden_field_tag 'ticket[train_id]', @train.id %>
    <%=	hidden_field_tag 'ticket[start_station_id]', @start_station.id %>
    <%=	hidden_field_tag 'ticket[end_station_id]', @end_station.id %>
  </div>

  <div class="actions">
    <%= submit_tag 'Создать' %>
  </div>
<% end %>
