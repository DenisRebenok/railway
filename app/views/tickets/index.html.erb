<h1>Список билетов</h1>

<table class="table table-condensed">
  <tr>
    <th>Номер</th>
    <th>Поезд</th>
    <th>Станция отправления</th>
    <th>Станция прибытия</th>
    <th>Владелец</th>
    <th colspan="3"></th>
  </tr>

  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.id %></td>
      <td><%= ticket.train.number %></td>
      <td><%= ticket.start_station.title %></td>
      <td><%= ticket.end_station.title %></td>
      <td><%= ticket.user_name %></td>
      <td><%= link_to t('common.show'), ticket %></td>
      <td><%= link_to t('common.delete'), ticket, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>