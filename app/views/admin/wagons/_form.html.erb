<%= form_for ([:admin, @train, @wagon.becomes(Wagon)]) do |f| %>
    <%= render 'common/errors', resource: @wagon %>

    <div class="field">
      <%= f.label :train_id, 'Поезд' %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field">
      <%= f.label :number, 'Номер вагона' %><br>
      <%= f.text_field :number %>
    </div>

    <div class="field">
      <%= f.label :type, 'Тип вагона' %>
      <%= f.select :type, [['Плацкартный','EconomyWagon'], ['Купейный','CoupeWagon'],
                           ['СВ','FirstClassWagon'], ['Сидячий','SittingWagon']] %>
    </div>

    <div class="field">
      <%= f.label :upper_places, 'Верхних мест' %><br>
      <%= f.number_field :upper_places %>
    </div>

    <div class="field">
      <%= f.label :lower_places, 'Нижних мест' %><br>
      <%= f.number_field :lower_places %>
    </div>

    <div class="field">
      <%= f.label :side_upper_places, 'Боковых верхних мест' %><br>
      <%= f.number_field :side_upper_places %>
    </div>

    <div class="field">
      <%= f.label :side_lower_places, 'Боковых нижних мест' %><br>
      <%= f.number_field :side_lower_places %>
    </div>

    <div class="field">
      <%= f.label :sitting_places, 'Сидячих мест' %><br>
      <%= f.number_field :sitting_places %>
    </div>

    <div class="actions">
      <%= f.submit "#{@wagon.new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>