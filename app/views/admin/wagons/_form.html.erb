<%= form_for ([:admin, @train, @wagon.becomes(Wagon)]) do |f| %>
    <%= render 'common/errors', resource: @wagon %>

    <div class="field">
      <%= f.label :train_id %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field">
      <%= f.label :number %><br>
      <%= f.text_field :number %>
    </div>

    <div class="field">
      <%= f.label :type %>
      <%= f.select :type, [['Плацкартный','EconomyWagon'], ['Купейный','CoupeWagon'],
                           ['СВ','FirstClassWagon'], ['Сидячий','SittingWagon']] %>
    </div>

    <div class="field">
      <%= f.label :upper_places %><br>
      <%= f.number_field :upper_places %>
    </div>

    <div class="field">
      <%= f.label :lower_places %><br>
      <%= f.number_field :lower_places %>
    </div>

    <div class="field">
      <%= f.label :side_upper_places %><br>
      <%= f.number_field :side_upper_places %>
    </div>

    <div class="field">
      <%= f.label :side_lower_places %><br>
      <%= f.number_field :side_lower_places %>
    </div>

    <div class="field">
      <%= f.label :sitting_places %><br>
      <%= f.number_field :sitting_places %>
    </div>

    <div class="actions">
      <%= f.submit t('.submit', action: @wagon.new_record? ? 'Создать' : 'Изменить') %>
    </div>
<% end %>