<%= form_for([:admin, @ticket]) do |f| %>
    <%= render 'common/errors', resource: @ticket %>

    <div class="field">
      <%= f.label :user_name, 'ФИО пассажира' %><br>
      <%= f.text_field :user_name %>
    </div>

    <div class="field">
      <%= f.label :train, 'Поезд' %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>


    <div class="field">
      <%= f.label :start_station, 'Станция отправления' %>
      <%= f.collection_select :start_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :end_station, 'Станция прибытия' %>
      <%= f.collection_select :end_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="actions">
      <%= f.submit "#{@ticket.new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>