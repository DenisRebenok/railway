<h1>Поиск билета</h1>

<div class="row">
  <%= form_tag search_path, method: :get do %>
      <div class="col-md-4">
        <%= select_tag :start_station, options_from_collection_for_select(@stations, :id, :title), class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= select_tag :end_station, options_from_collection_for_select(@stations, :id, :title), class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= submit_tag "Найти", class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>

<p>
  <% if @routes %>
    <table class="table">
      <tr>
        <th>Поезд</th>
        <th>Маршрут</th>
        <th>Время отправления</th>
        <th>Время прибытия</th>
        <td></td>
      </tr>
      <% @routes.each do |route| %>
        <% route.trains.each do |train| %>
          <tr>
            <td><%= train.number %></td>
            <td><%= route.title %></td>
            <td><%= @start_station.departure_time(train) %></td>
            <td><%= @end_station.arrive_time(train) %></td>
            <td><%= link_to "Купить", new_ticket_path(ticket: {start_station_id: @start_station.id, end_station_id: @end_station.id, train_id: train.id}) %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  <% end %>
</p>