<h1>Поиск билета</h1>

<p>
  <%= form_tag search_path, method: :get do %>
    <%= label_tag :start_station_id, 'Станция отправления' %>
    <%= collection_select(:start_station_id, nil, @stations, :id, :title) %> <br>
    <%= label_tag :end_station_id, 'Станция прибытия' %>
    <%= collection_select(:end_station_id, nil, @stations, :id, :title) %>
    <%= submit_tag 'Найти' %>
  <% end %>
</p>

<p>
  <% if @routes %>
    <table>
      <tr>
        <th>Поезд</th>
        <th>Маршрут</th>
        <th>Время отправления</th>
        <th>Время прибытия</th>
        <td></td>
      </tr>
      <% @routes.each do |route| %>
        <% route.trains.each do |train| %>
          <tr>
            <td><%= train.number %></td>
            <td><%= route.title %></td>
            <td><%= @start_station.departure_time(train) %></td>
            <td><%= @end_station.arrive_time(train) %></td>
            <td><%= link_to "Купить", new_ticket_path(ticket: {start_station_id: @start_station.id, end_station_id: @end_station.id, train_id: train.id}) %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  <% end %>
</p>